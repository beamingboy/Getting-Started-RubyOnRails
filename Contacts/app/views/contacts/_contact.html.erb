<tr id="<%= dom_id contact %>">
  <td>
    <%= contact.first_name %>
  </td>

  <td>
    <%= contact.last_name %>
  </td>

  <td>
    <%= contact.phone %>
  </td>

  <td>
    <%= contact.email %>
  </td>
  <td>
    <%= link_to "Show",contact, class:"text-white btn btn-secondary" %>
  </td>
  <td>
    <%= link_to "Edit",edit_contact_path(contact), class:"text-white btn btn-secondary" %>
  </td>
  <td>
      <%= button_to "Delete", contact, method: :delete, confirm: "Are you sure?", class:"btn btn-danger text-white" %>
    <%#= link_to contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger text-white" do %>
<!--      <i class="remove icon"></i> Destroy-->
    <%# end %>
  </td>

</tr>
